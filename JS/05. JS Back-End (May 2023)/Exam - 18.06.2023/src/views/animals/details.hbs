<main class="details">
  {{#with animal}}
    <section id="details">
      <div id="details-wrapper">
        <p id="details-title">Name: {{name}}</p>
        <div id="img-wrapper">
          <img src="{{image}}" />
        </div>
        <div id="info-wrapper">
          <table>
            <tr>
              <td>
                <p>
                  Years:
                  <span id="details-years">{{years}}</span>
                </p>
              </td>
              <td>
                <p>Kind: <span id="details-kind">{{kind}}</span></p>
              </td>
            </tr>
            <tr>
              <td>
                <p>Need of: <span id="details-need">{{need}}</span></p>
              </td>
              <td>
                <p>Location:
                  <span id="details-location">{{location}}</span></p>
              </td>
            </tr>
          </table>
          <p>Description:
            <span id="details-description">{{description}}</span></p>
        </div>

        {{#if isUser}}
          <div id="action-buttons">
            {{#if isOwner}}
              <a href="/dashboard/{{_id}}/edit" id="edit-btn">Edit</a>
              <a href="/dashboard/{{_id}}/delete" id="delete-btn">Delete</a>
            {{else}}
              {{#if canDonate}}
                <a
                  href="/dashboard/{{_id}}/donate"
                  id="donation-btn"
                >Donation</a>
              {{else}}
                <p id="already-donated">You already donated!</p>
              {{/if}}
            {{/if}}
          </div>
        {{/if}}
      </div>
    </section>
  {{/with}}
</main>